<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ToughToes</title>
  <link rel="stylesheet" href="/css/home.css">
 <link rel="stylesheet" href="/css/common.css" />
  <link rel="stylesheet" href="/css/footer.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  
</head>
<body>

  <%- include('../partials/user-navbar', { name: name }) %>

  
  <section class="hero" style="background-image: url('<%= bannerImage ? bannerImage : 'https://via.placeholder.com/1200x400?text=Welcome+to+ToughToes' %>');">
    <div class="hero-text">
      <h1>Step Into Comfort</h1>
      <p>Discover premium shoes for every occasion. From athletic performance to formal elegance.</p>
      <div class="hero-buttons">
        <a href='/products' class="btn-outline" style="text-decoration:none;color:inherit;">View Collection</a>
      </div>
    </div>
  </section>


  <section class="categories">
    <h2>Shop by Category</h2>
    <div class="category-cards">
      <div class="card" style="pointer-events:auto;">
        <img src="<%= menImage ? menImage : 'https://via.placeholder.com/300x200?text=Men\'s+Shoes' %>" alt="Men's Collection">
        <h3>Men's Collection</h3>
        <p>Sneakers, Formal, Running & Football</p>
        <button class="btn-black" onclick="window.location.href='/products?category=MEN'; event.stopPropagation();">Shop Men's</button>
      </div>
      <div class="card" style="pointer-events:auto;">
        <img src="<%= womenImage ? womenImage : 'https://via.placeholder.com/300x200?text=Women\'s+Shoes' %>" alt="Women's Collection">
        <h3>Women's Collection</h3>
        <p>Sneakers, Formal, Running & Football</p>
        <button class="btn-black" onclick="window.location.href='/products?category=WOMEN'; event.stopPropagation();">Shop Women's</button>
      </div>
      <div class="card" style="pointer-events:auto;">
        <img src="<%= kidsImage ? kidsImage : 'https://via.placeholder.com/300x200?text=Kids+Shoes' %>" alt="Kids' Collection">
        <h3>Kids' Collection</h3>
        <p>Sneakers, School, Running & Football</p>
        <button class="btn-black" onclick="window.location.href='/products?category=KIDS'; event.stopPropagation();">Shop Kids'</button>
      </div>
    </div>
  </section>

  
  <section class="featured">
    <div class="featured-header">
      <h2>Featured Products</h2>
      <a href="/products">View All →</a>
    </div>
    <div class="product-grid">
      <% if (featuredProducts && featuredProducts.length) { %>
        <% featuredProducts.forEach(product => { %>
          <div class="product-card" style="cursor:pointer;" onclick="window.location.href='/products/<%= product._id %>'">
            <% if (product.image) { %>
              <img src="<%= product.image %>" alt="<%= product.name %>">
            <% } else { %>
              <img src="https://via.placeholder.com/200x150?text=<%= encodeURIComponent(product.name) %>" alt="<%= product.name %>">
            <% } %>
            <h3><%= product.name %></h3>
            <p><%= product.product_category %></p>
            <span>₹<%= product.price.toFixed(2) %></span>
            <i class="fas fa-cart-plus"></i>
          </div>
        <% }) %>
      <% } else { %>
        <div>No featured products available.</div>
      <% } %>
    </div>
  </section>

  

</body>
  <%- include('../partials/footer') %>

</html>
