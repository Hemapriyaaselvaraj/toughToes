<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ToughToes</title>
  <link rel="stylesheet" href="/css/home.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body>

  <!-- Header -->
  <header class="navbar">
    <div class="logo">ToughToes</div>
    <nav class="nav-links">
      <a href="#">Men</a>
      <a href="#">Women</a>
      <a href="#">Kids</a>
      <a href="#">Sale</a>
    </nav>
    <div class="nav-right">
      <input type="text" placeholder="Search shoes..." class="search-input">
      <i class="fas fa-search"></i>
      <i class="fas fa-shopping-cart"></i>
      <i class="fas fa-user"></i>
      <span><%= name %></span>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero">
    <div class="hero-text">
      <h1>Step Into Comfort</h1>
      <p>Discover premium shoes for every occasion. From athletic performance to formal elegance.</p>
      <div class="hero-buttons">
        <button class="btn-black">Shop Now</button>
        <button class="btn-outline">View Collection</button>
      </div>
    </div>
  </section>

  <!-- Shop by Category -->
  <section class="categories">
    <h2>Shop by Category</h2>
    <div class="category-cards">
      <div class="card">
        <img src="<%= menImage ? menImage : 'https://via.placeholder.com/300x200?text=Men\'s+Shoes' %>" alt="Men's Collection">
        <h3>Men's Collection</h3>
        <p>Sneakers, Formal, Running & Football</p>
        <button class="btn-black">Shop Men's</button>
      </div>
      <div class="card">
        <img src="<%= womenImage ? womenImage : 'https://via.placeholder.com/300x200?text=Women\'s+Shoes' %>" alt="Women's Collection">
        <h3>Women's Collection</h3>
        <p>Sneakers, Formal, Running & Football</p>
        <button class="btn-black">Shop Women's</button>
      </div>
      <div class="card">
        <img src="<%= kidsImage ? kidsImage : 'https://via.placeholder.com/300x200?text=Kids+Shoes' %>" alt="Kids' Collection">
        <h3>Kids' Collection</h3>
        <p>Sneakers, School, Running & Football</p>
        <button class="btn-black">Shop Kids'</button>
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="featured">
    <div class="featured-header">
      <h2>Featured Products</h2>
      <a href="#">View All →</a>
    </div>
    <div class="product-grid">
      <% if (featuredProducts && featuredProducts.length) { %>
        <% featuredProducts.forEach(product => { %>
          <div class="product-card">
            <% if (product.image) { %>
              <img src="<%= product.image %>" alt="<%= product.name %>">
            <% } else { %>
              <img src="https://via.placeholder.com/200x150?text=<%= encodeURIComponent(product.name) %>" alt="<%= product.name %>">
            <% } %>
            <h3><%= product.name %></h3>
            <p><%= product.product_category %></p>
            <span>$<%= product.price.toFixed(2) %></span>
            <i class="fas fa-cart-plus"></i>
          </div>
        <% }) %>
      <% } else { %>
        <div>No featured products available.</div>
      <% } %>
    </div>
  </section>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-column">
      <h3>ToughToes</h3>
      <p>Premium shoes for every step of your journey.</p>
    </div>
    <div class="footer-column">
      <h4>Quick Links</h4>
      <ul>
        <li>About Us</li>
        <li>Contact</li>
        <li>Size Guide</li>
        <li>Returns</li>
      </ul>
    </div>
    <div class="footer-column">
      <h4>Categories</h4>
      <ul>
        <li>Men's Shoes</li>
        <li>Women's Shoes</li>
        <li>Kids' Shoes</li>
        <li>Sale</li>
      </ul>
    </div>
    <div class="footer-column">
      <h4>Follow Us</h4>
      <p><i class="fab fa-facebook"></i> <i class="fab fa-instagram"></i> <i class="fab fa-twitter"></i></p>
    </div>
  </footer>
  <div class="footer-bottom">
    <p>© 2025 ToughToes. All rights reserved.</p>
  </div>

</body>
</html>
