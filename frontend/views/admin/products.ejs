<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin - Products</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="/css/adminDashboard.css"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
</head>

<body>
<div class="container-fluid">
  <div class="row">
    <%- include('../partials/sidebar') %>

    <div class="col-md-10 p-0">
      <div class="bg-white d-flex justify-content-between align-items-center py-3 px-4 border-bottom">
        <h5 class="mb-0">Products</h5>
        <div class="d-flex align-items-center gap-2">
          <span><%= admin.name %></span>
          <i class="fa-solid fa-user"></i>
        </div>
      </div>

      <div class="p-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
          <input type="text" id="searchInput" class="form-control w-50" placeholder="Search products...">
          <a href="/admin/products/add" class="btn btn-dark"><i class="fa fa-plus"></i> Add Product</a>
        </div>

        <table class="table table-hover">
          <thead>
            <tr>
              <th><input type="checkbox" /></th>
              <th>Product</th>
              <th>Product ID</th>
              <th>Price</th>
              <th>Category</th>
              <th>Stock</th>
              <th>Added On</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(product => { %>
              <tr>
                <td><input type="checkbox" /></td>
                <td>
                  <div><strong><%= product.name %></strong></div>
                  <div class="text-muted"><%= product.brand %></div>
                </td>
                <td>#<%= product.productId %></td>
                <td>$<%= product.price.toFixed(2) %></td>
                <td><span class="badge bg-secondary"><%= product.category %></span></td>
                <td><%= product.stock %></td>
                <td><%= product.addedOn.toDateString() %></td>
                <td>
                  <i class="fa fa-edit text-primary mx-1 cursor-pointer"></i>
                  <i class="fa fa-trash text-danger mx-1 cursor-pointer"></i>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>

        <div>
          <small>Showing <%= products.length %> products</small>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
</html>
