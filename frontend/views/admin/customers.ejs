<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customers</title>
<link rel="stylesheet" href="/frontend/public/css/adminCustomers.css">
</head>
<body>
  <div class="container">
    <header>
      <div class="topbar">
        <h1>ToughToes</h1>
        <div class="user-info">
          <span>John Doe</span>
          <img src="/profile.png" alt="Profile Picture">
        </div>
      </div>
    </header>
    
    <main>
      <nav class="sidebar">
        <ul>
          <li><a href="/dashboard">Dashboard</a></li>
          <li><a href="/orders">Orders</a></li>
          <li><a href="/products">Products</a></li>
          <li><a href="/customers" class="active">Customers</a></li>
          <li><a href="/coupons">Coupons</a></li>
          <li><a href="/categories">Categories</a></li>
          <li><a href="/refund-return">Refund/Return</a></li>
          <li><a href="/review">Review</a></li>
          <li><a href="/signout">Sign Out</a></li>
        </ul>
      </nav>
      
      <section class="main-content">
        <div class="content-header">
          <h2>Customers</h2>
          <p>Manage your customer accounts and data</p>
        </div>
        
        <div class="search-container">
          <input type="text" placeholder="Search customers...">
          <select>
            <option value="all">All</option>
            <option value="active">Active</option>
            <option value="blocked">Blocked</option>
          </select>
          <button>More Filters</button>
        </div>

        <table class="customers-table">
          <thead>
            <tr>
              <th><input type="checkbox"></th>
              <th>Customer</th>
              <th>Customer ID</th>
              <th>Total Orders</th>
              <th>Wallet Balance</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% customers.forEach(customer => { %>
              <tr>
                <td><input type="checkbox"></td>
                <td><%= customer.name %> <br><span><%= customer.email %></span></td>
                <td><%= customer.id %></td>
                <td><%= customer.totalOrders %></td>
                <td><%= customer.walletBalance.toFixed(2) %></td>
                <td><span class="status <%= customer.status %>"><%= customer.status.charAt(0).toUpperCase() + customer.status.slice(1) %></span></td>
                <td>
                  <button class="view">View</button>
                  <button class="block">Block</button>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>

        <div class="pagination">
          <button>Previous</button>
          <span>1</span>
          <button>Next</button>
        </div>
      </section>
    </main>
  </div>

  <script>
document.addEventListener('DOMContentLoaded', function () {
  // Example functionality for buttons (View, Block)
  document.querySelectorAll('.view').forEach(button => {
    button.addEventListener('click', () => {
      alert("Viewing customer details");
    });
  });

  document.querySelectorAll('.block').forEach(button => {
    button.addEventListener('click', () => {
      alert("Blocking customer");
    });
  });
});
</script>
</body>
</html>

 
