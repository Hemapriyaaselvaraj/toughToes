<script>
  const sidebarLogoutBtn = document.getElementById('sidebar-logout-btn');
  if (sidebarLogoutBtn) {
    sidebarLogoutBtn.addEventListener('click', async function(e) {
      e.preventDefault();
      try {
        const response = await fetch('/user/logout', {
          method: 'POST',
          credentials: 'include'
        });
        if (response.ok) {
          window.location.href = '/user/login';
        } else {
          alert('Logout failed');
        }
      } catch (err) {
        alert('Logout error');
      }
    });
  }
</script>
