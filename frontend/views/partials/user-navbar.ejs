<header class="navbar">
  <div class="logo">ToughToes</div>
  <nav class="nav-links">
    <a href="#" onclick="selectCategory('Men'); return false;">Men</a>
    <a href="#" onclick="selectCategory('Women'); return false;">Women</a>
    <a href="#" onclick="selectCategory('Kids'); return false;">Kids</a>
  </nav>
  <div class="nav-right">
    <input type="text" placeholder="Search shoes..." class="search-input" />
    <i class="fas fa-search"></i>
    <i class="fas fa-shopping-cart"></i>
    <i class="fas fa-user"></i>
    <% if (typeof name === 'string' && name.trim().length > 0) { %>
      <span><%= name %></span>
      <button id="logoutBtn" class="btn btn-logout">Logout</button>
    <% } else { %>
      <button id="loginBtn" class="btn btn-login">Login</button>
    <% } %>
  </div>
</header>

<script>
  const logoutBtn = document.getElementById("logoutBtn");
  if (logoutBtn) {
    logoutBtn.addEventListener("click", async function () {
      try {
        const response = await fetch("/user/logout", {
          method: "POST",
          credentials: "include",
        });
        if (response.ok) {
          window.location.href = "/user/login";
        } else {
          alert("Logout failed");
        }
      } catch (err) {
        alert("Logout error");
      }
    });
  }
  const loginBtn = document.getElementById("loginBtn");
  if (loginBtn) {
    loginBtn.addEventListener("click", function () {
      window.location.href = "/user/login";
    });
  }
</script>
